        {
          "name": "Analyze Spam Message - Phishing",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"URGENT: Your account has suspicious activity. Click here immediately to verify your identity: https://secure-verify.com/login\",\n  \"messageType\": \"EMAIL\",\n  \"sender\": \"noreply@bank-security.com\",\n  \"subject\": \"Account Security Alert\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/spam-detection/analyze-message",
              "host": ["{{base_url}}"],
              "path": ["api", "spam-detection", "analyze-message"]
            }
          }
        },
